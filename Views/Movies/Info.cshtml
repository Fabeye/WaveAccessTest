@model MovieListViewModel

<h1>@Model.movie.movieName</h1> 
<img class="img-thumbnail" src="@Model.movie.img" alt="@Model.movie.movieName" />
<p>@Model.movie.movieInfo</p>
<p>День премьеры։ @Model.movie.premiereDate.ToString("dd-MM-yyyy")</p>
<p>Рейтинг։ @Model.movie.movieRating</p>
<p><a asp-controller="Movies" asp-action="addRating" asp-route-id="@Model.movie.id">-поднять рейтинг-</a></p>


<h3>В фильме играли</h3>
<div class="row mt-5 mb-2">
@{
    foreach (var actor in Model.actors)
    {
        <div class = "col-lg-3"> 
            <img class="img-thumbnail" src="@actor.img", width=100 height =150 alt="@actor.actorName" />
            <h3>@actor.actorName</h3>
            <p>Рейтинг։ @actor.actorRating</p>

            <p><a class="btn btn-warning" asp-controller="Actors", asp-action="actorInfo" asp-route-id="@actor.id">Больше информации</a></p>
        </div> 
    }
}
</div>
            

